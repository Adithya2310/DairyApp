<%- include("partials/navbar.ejs") -%>
<section id="contact" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h2 class="py-4">Contact Us</h2>
          <p>Please feel free to reach out to us with any questions, comments, or feedback!</p>
          <ul class="list-unstyled">
            <li><i class="fas my-2 fa-envelope mr-3"></i>email@example.com</li>
            <li><i class="fas my-2 fa-phone mr-3"></i>123-456-7890</li>
            <li><i class="fas my-2 fa-map-marker-alt mr-3"></i>123 Main St, Anytown, USA</li>
          </ul>
        </div>
        <div class="col-md-6">
          <form 
          action="https://formspree.io/f/mayzvabn"
          method="POST"
            >
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="Name" required class="form-control" id="name">
            </div>
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" name="Email" required class="form-control" id="email">
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea name="Message" required class="form-control" id="message" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-teal">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>
  
<%- include("partials/footer.ejs") -%>